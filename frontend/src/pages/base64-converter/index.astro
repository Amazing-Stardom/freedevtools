---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Base64Converter from './_Base64Converter.tsx';
import { getToolByKey } from '../../config/tools';

const tool = getToolByKey('base64-converter');
---

<BaseLayout 
  title={`${tool.name} - Encode/Decode Text Online | Free Dev Tools`}
  description={tool.description}
  canonical={tool.canonical}
  themeColor={tool.themeColor}
>
  <Base64Converter client:load />
</BaseLayout> 