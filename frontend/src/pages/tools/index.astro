---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllTools } from '../../config/tools';
// Simple tools index page
---

<BaseLayout 
  title="Developer Tools - Free Dev Tools"
  description="A collection of free developer tools"
  canonical="https://hexmos.com/freedevtools/t/tools/"
  themeColor="#1e40af"
>
  <div class="max-w-4xl mx-auto p-8">
    <header class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-2 text-blue-600 dark:text-blue-400">
        Developer Tools
      </h1>
      <p class="text-xl text-slate-600 dark:text-slate-400">
        Essential tools for developers
      </p>
    </header>
    
    <main>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
        {getAllTools().map((tool) => (
          <a href={tool.path} class="block p-6 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-lg text-inherit no-underline transition-all duration-200 ease-in-out shadow-sm hover:-translate-y-1 hover:shadow-lg hover:border-blue-500 dark:hover:border-blue-400">
            <h2 class="m-0 mb-2 text-blue-600 dark:text-blue-400 text-xl font-semibold">
              {tool.name}
            </h2>
            <p class="m-0 text-slate-600 dark:text-slate-400">
              {tool.description}
            </p>
          </a>
        ))}
      </div>
    </main>
    
    <footer>
      <a href="/" class="inline-block px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white no-underline rounded-lg transition-colors duration-200">
        ‚Üê Back to Home
      </a>
    </footer>
  </div>
</BaseLayout> 