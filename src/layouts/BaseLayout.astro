---
export interface Props {
  title: string;
  description?: string;
  canonical?: string;
  themeColor?: string;
}

const { title, description, canonical, themeColor = "#1e40af" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <meta name="theme-color" content={themeColor} />
    {canonical && <link rel="canonical" href={canonical} />}
    
    <!-- Import global CSS with Tailwind -->
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="m-0 p-0 font-sans bg-slate-50 text-slate-800 leading-relaxed dark:bg-slate-900 dark:text-slate-200">
    <slot />
  </body>
</html> 