---
import Sidebar from '../components/Sidebar.tsx';
import { getToolsData } from '../utils/toolsData';

export interface Props {
  title: string;
  description?: string;
  canonical?: string;
  themeColor?: string;
  showSidebar?: boolean;
}

const { title, description, canonical, themeColor = "#1e40af", showSidebar = true } = Astro.props;
const tools = getToolsData();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <meta name="theme-color" content={themeColor} />
    {canonical && <link rel="canonical" href={canonical} />}
    
    <!-- Import global CSS with Tailwind -->
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="m-0 p-0 font-sans bg-slate-50 text-slate-800 leading-relaxed dark:bg-slate-900 dark:text-slate-200">
    <div class="flex h-screen">
      {showSidebar && (
        <Sidebar client:load tools={tools} currentPath={Astro.url.pathname} />
      )}
      <main class="flex-1 overflow-auto">
        <slot />
      </main>
    </div>
  </body>
</html> 